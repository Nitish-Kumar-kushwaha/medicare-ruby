
<div class="container mt-5">
  <%= form_with(model: line_item) do |form| %>
    <% if line_item.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

        <ul>
          <% line_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :cart_id, class: "form-label" %>
      <%= form.number_field :cart_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :store_id, class: "form-label" %>
      <%= form.number_field :store_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :quantity, class: "form-label" %>
      <%= form.number_field :quantity, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
