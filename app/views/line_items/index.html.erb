<div class="container mt-5">
  <p class="alert alert-info"><%= notice %></p>

  <h1>Line Items</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Cart</th>
        <th>Store</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.cart_id %></td>
          <td><%= line_item.store_id %></td>
          <td><%= line_item.quantity %></td>
          <td><%= link_to 'Show', line_item, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_line_item_path(line_item), class: 'btn btn-secondary btn-sm' %></td>
          <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Line Item', new_line_item_path, class: 'btn btn-success' %>
  </div>
</div>
