<div class="container mt-5">
  <p class="alert alert-info"><%= notice %></p>

  <h1>Carts</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= link_to 'Show', cart, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_cart_path(cart), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Cart', new_cart_path, class: 'btn btn-success' %>
  </div>
</div>
