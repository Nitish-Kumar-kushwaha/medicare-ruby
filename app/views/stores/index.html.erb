<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-4 mb-4">Stores</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Purpose</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.name %></td>
              <td><%= store.purpose %></td>
              <td><%= store.category %></td>
              <td><%= store.price %></td>
              <td><%= store.description %></td>
              <td>
                <%= link_to 'Show', store, class: 'btn btn-primary btn-sm my-2' %>
                <%= link_to 'Edit', edit_store_path(store), class: 'btn btn-warning btn-sm my-2' %>
                <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm my-2' %>
              </td>
              <td>
                <p>
                  <%= image_tag store.header_image, class: 'img-thumbnail', style: 'max-height: 300px;' %>
                </p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= link_to 'New Store', new_store_path, class: 'btn btn-success mt-4 my-4' %>
      </div>
    </div>
  </div>
</div>
